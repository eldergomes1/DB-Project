<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
</head>
<body>
    <% if(session.administrador){ %>
        <a href="/campana/create"> crear campa√±a</a>
        <a href="/usuario"> lista de usuario</a>
    <% } %>
    <form action="/logout" method="POST">
        <button type="submit">cerrar sesion</button> 
    </form>
    <table>
    <tr>
        <th>id</th>
        <th>nombre</th>
        <th>lider</th>
        <th>objetivo</th>
        <% if(session.administrador){ %>
        <th>acciones</th>
        <% } %>
    </tr>
    <% campaigns.forEach(campaign => { %>
        <tr>
            <td><%= campaign.idcampana %></td>
            <td><%= campaign.nombre %></td>
            <td><%= campaign.username %></td>
            <td><%= campaign.objetivo %></td>
            <% if(session.lider){ %>
            <td>
                <a href= <%= '/campana/'+campaign.idcampana+'/edit' %>>edit</a>
            </td>
            <% } %>
        </tr>
    <% }); %>
    </table>
</body>
</html>