<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
</head>
<body>
    <% if(isAdmin){ %>
        <input type="button" onclick=<%="location.href='/usuario/create'" %> value="Crear usuario">
        <!-- <a href="/usuario/create">crear usuario</a> -->
    <% } %>
    <table>
        <tr>
            <th>id</th>
            <th>nombre</th>
            <th>roles</th>
        </tr>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.idusuario %></td>
                <td><%= user.username %></td>
                <td>
                    <div>
                        <small></small>
                            agente
                            <input disabled type="checkbox" <% if(user.agente){ %>checked<% } %>>
                        </small>
                        <small></small>
                            lider
                            <input disabled type="checkbox" <% if(user.lider){ %>checked<% } %>>
                        </small>
                        <small></small>
                        administrador
                            <input disabled type="checkbox" <% if(user.administrador){ %>checked<% } %>>
                        </small>
                    </div>
                </td>
            </tr>
        <% }); %>
        </table>
</body>
</html>